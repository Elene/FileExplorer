<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cell_file_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/colorUncheck"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cell_file_iv_photo"
        app:layout_constraintTop_toTopOf="@+id/cell_file_iv_photo" />

    <ImageView
        android:id="@+id/cell_file_iv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/cell_file_tv_count"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:text="TextView"
        android:textColor="@color/colorUncheck"
        app:layout_constraintBottom_toBottomOf="@+id/cell_file_iv_photo"
        app:layout_constraintStart_toStartOf="@+id/cell_file_tv_name" />

    <TextView
        android:id="@+id/cell_file_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="@color/colorUncheck"
        app:layout_constraintBottom_toBottomOf="@+id/cell_file_tv_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cell_file_tv_count" />
</android.support.constraint.ConstraintLayout>